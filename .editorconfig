# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# Set default charset
charset = utf-8

# Java, Scala ...
[*.{java,stg,sbt,scala,css,html,js,jsx,json}]
indent_style = space
indent_size = 2
max_line_length = 100

# All other languages
[*.{py}]
indent_style = space
indent_size = 4
